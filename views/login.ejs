<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>EMCEL RICEMILL</title>
  <link rel="stylesheet" href="/css/login.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
</head>

  <body>
    <header>
      <a href="/index"><img src="/Photos/Emcel logo backround removed.png" height="50" alt=""></a>

      <div id="menuToggle" class="menu-toggle">
        <i class="fa-solid fa-bars"></i>
      </div>

      <nav id="mainNav">
        <ul>
          <li><a href="/#home">Home</a></li>
          <li><a href="/#aboutus">About Us</a></li>
          <li><a href="/#products">Products</a></li>
          <li><a href="/#contact">Contact</a></li>
          <li><a href="/login">Log In</a></li>
        </ul>
      </nav>
    </header>

      <div class="main_container">
          <div class="welcomeLogin_container" id="auth-container">

          <!-- LOGIN / REGISTER SECTION -->
          <div class="form_container login_container">
              <h1>Login</h1>
              <p>Please enter your login details to access your account.</p>
              <form action="/auth/login" method="POST">
                <div class="input_group">
                    <input id="loginEmail" name="email" type="text" placeholder="Email" required>
                </div>
                <div class="input_group">
                    <input id="loginPassword" name="password" type="password" placeholder="Password" required>
                </div>
                <button id="loginSubmit" type="submit">Login</button>
              </form>
              <p class="donthaveacct">Don't have an account? <a id="showRegister">Create account</a></p>
              <% if (message) { %>
                <p class="message"><%= message %></p>
              <% } %>
          </div>

          <div class="form_container register_container">
              <h1>Create Account</h1>
              <p>Fill in your details to sign up.</p>
              <form action="/auth/register" method="POST">
                <div class="input_firstlastname">
                    <input id="registerFname" name="firstname" type="text" placeholder="First Name" required>
                    <input id="registerLname" name="lastname" type="text" placeholder="Last Name" required>
                </div>
                <div class="input_group">
                    <input id="registerEmail" name="email" type="text" placeholder="Email" required>
                </div>
                <div class="input_group">
                    <input id="registerPassword" name="password" type="password" placeholder="Password" required>
                </div>
                <div class="input_group">
                    <input type="password" name="confirmPassword" placeholder="Confirm Password" required>
                </div>
                <button id="registerSubmit" type="submit">Register</button>
              </form>
              <p class="donthaveacct">Already have an account? <a id="showLogin">Login</a></p>

              <% if (message) { %>
                <p class="message"><%= message %></p>
              <% } %>
          </div>

          <!-- IMAGE SIDE -->
          <div class="image_container">
              <img src="/Photos/LogoPicture.jpg" alt="Rice mill image">
          </div>
          </div>
      </div>

      <!-- Toast Notification -->
<div id="toast"></div>

    <script src="/js/login.js"></script>
  </body>
</html>
